<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Ürün Ekle</title>
    <style>
        /* Genel Sayfa Stili */
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 0;
            background-color: #fce4ec; /* Pembe pastel arka plan */
            color: #333;
        }

        h1 {
            color: #d81b60; /* Daha koyu bir pembe ton */
            text-align: center;
            margin-bottom: 20px;
        }

        a {
            color: #c2185b; /* Pembe tonu link */
            text-decoration: none;
            font-weight: bold;
        }

        a:hover {
            color: #880e4f; /* Daha koyu pembe hover */
        }

        /* Form Stilleri */
        form {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            border: 1px solid #f8bbd0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: 0 auto;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #880e4f;
        }

        input, textarea, select, button {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: 1px solid #f8bbd0;
        }

        textarea {
            resize: vertical;
            min-height: 100px;
        }

        button {
            background-color: #d81b60;
            color: #fff;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #c2185b;
        }

        h3 {
            color: #d81b60;
        }

        /* Özellik Bölümleri */
        .feature-section {
            background-color: #fce4ec;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        .feature-section input {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <h1>Ürün Ekle</h1>
    
    <form action="/admin/products/add" method="POST" enctype="multipart/form-data">
        <label for="name">Ürün Adı:</label>
        <input type="text" id="name" name="name" required><br>
    
        <label for="description">Açıklama:</label>
        <textarea id="description" name="description" required></textarea><br>
    
        <label for="price">Fiyat:</label>
        <input type="number" id="price" name="price" step="0.01" required><br>
    
        <label for="stock">Stok:</label>
        <input type="number" id="stock" name="stock" required><br>
    
        <label for="category">Kategori:</label>
        <select name="category" id="category" required>
            <option value="">Kategori Seçin</option>
            <% categories.forEach(function(category) { %>
                <option value="<%= category.id %>"><%= category.name %></option>
            <% }); %>
        </select><br>
    
        <label for="image">Ürün Resmi:</label>
        <input type="file" id="image" name="image" accept="image/*"><br><br>
    
        <!-- Özellik 1 -->
        <div class="feature-section">
            <h3>Özellik 1</h3>
            <label for="feature1_name">Ad:</label>
            <input type="text" id="feature1_name" name="feature1_name"><br>
            <label for="feature1_image">Resim:</label>
            <input type="file" id="feature1_image" name="feature1_image" accept="image/*"><br>
        </div>
    
        <!-- Özellik 2 -->
        <div class="feature-section">
            <h3>Özellik 2</h3>
            <label for="feature2_name">Ad:</label>
            <input type="text" id="feature2_name" name="feature2_name"><br>
            <label for="feature2_image">Resim:</label>
            <input type="file" id="feature2_image" name="feature2_image" accept="image/*"><br>
        </div>
    
        <button type="submit">Ürünü Ekle</button>
    </form>
</body>
</html>
